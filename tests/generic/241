#
# FS QA Test No. 241
#
# Run parallel dbench & check for filesystem corruption
# This corrupted ext4 inode bitmaps due to races at one point
#
#
seq=`basename $0`
seqres=$RESULT_DIR/$seq
echo "QA output created by $seq"

here=`pwd`
tmp=/tmp/$$
status=1        # failure is the default!
trap "_cleanup; exit \$status" 0 1 2 3 15

_cleanup()
{
    cd /
    rm -f $tmp.*
    if [[ "$FSTYP" == btrfs ]] && ((status)); then
	    {
		    echo "Reformat TEST_DEV not to affect following test cases."
		    umount $TEST_DEV
		    _mkfs_dev -f $TEST_DEV
		    _test_mount
	    } >> $seqres.full 2>&1
    fi
}

# get standard environment, filters and checks
. ./common/rc
. ./common/filter

_supported_fs generic
_require_test

[ "$DBENCH_PROG" = "" ] && _notrun "dbench not found"

echo "Silence is golden."

# real QA test starts here
rm -f $seqres.full

rm -rf $TEST_DIR/dbench
mkdir $TEST_DIR/dbench

dbench -t 60 -D $TEST_DIR/dbench 4 >> $seqres.full

status=$?
exit
